<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1.0px" android:color="@color/rounded_container_border" />
            <gradient android:startColor="@color/item_click_top" android:endColor="@color/item_click_bottom" android:angle="270.0" />
            <corners android:radius="3.0px" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1.0px" android:color="@color/rounded_container_border" />
            <gradient android:startColor="@color/base_start_color_default" android:endColor="@color/base_end_color_default" android:angle="270.0" />
            <corners android:radius="3.0px" />
        </shape>
    </item>
</selector>