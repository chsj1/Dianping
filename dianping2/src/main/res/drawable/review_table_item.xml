        <shape>
            <corners android:radius="4.0dip" />
            <solid android:color="@color/white" />
            <padding android:left="6.0dip" android:right="6.0dip" />
            <stroke android:width="0.5dip" android:color="@color/separator_color" />
        </shape>
    </item>
</selector>