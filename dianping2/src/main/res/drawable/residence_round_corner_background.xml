<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="2.0px" android:color="@color/white" />
            <gradient android:startColor="#80ffffff" android:endColor="#80ffffff" android:angle="270.0" />
            <corners android:radius="8.0px" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="2.0px" android:color="@color/white" />
            <gradient android:startColor="@color/transparent" android:endColor="@color/transparent" android:angle="270.0" />
            <corners android:radius="8.0px" />
        </shape>
    </item>
</selector>